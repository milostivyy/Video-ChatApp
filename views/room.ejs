<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ABHI-VAADAN</title>
    <link rel="stylesheet" href="room.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
      var username = '<%= username %>';
    </script>
    <link
    rel="icon"
    href="https://jethromanagement.biz/wp-content/uploads/2017/12/Microsoft-Teams-logo.png"/>
    
  </head>
  <body>

    <!------------------------------ header starts ------------------------------>

    <div class="header" id="header">
      <div class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <h3 id="room_heading">ABHI-VAADAN Welcomes <%= username %></h2>
      </div>
    </div>  

    <!------------------------------ header ends ------------------------------>

    <!------------------------------ modal for meeting details ------------------------------>

    <div class="modal-container">
      <div class="modal" id="modal">
        <button class="close-button" id="close-button">X</button>
        <div class="modal-content">
          <h4>Your Meeting is Ready</h4>
          <p>Share this link with others you want in the meeting.</p>
          <input type="text" name="" id="meeting_url_input" />
          <div class="modal-meeting-url">
            <p id="meeting_url"></p>
            <i class="fa fa-copy" id="icon-copy" aria-hidden="true"></i>
          </div>
        </div>
      </div>
    </div> 

    <!------------------------------ modal ends ------------------------------>

    <!------------------------------ center div ------------------------------>

    <div class="main">  
    <div class="main__left">

      <!------------------------------ video grid starts------------------------------>
      <div class="videos__group">
        <div id="video-grid">
        </div>
      </div>
      <!------------------------------ video grid ends ------------------------------>

      <!------------------------------ room footer options ------------------------------>

      <div class="options">
        <div class="options__group">
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
          <div id="showChat" class="options__button">
            <i class="fa fa-comment"></i>
          </div>  
          <div id="showChatDextop" class="options__button">
            <i class="fa fa-comment"></i>
          </div>
          <div id="hideChatDextop" class="options__button">
            <i class="fa fa-comment"></i>
          </div>         
          <div id="meetingDetails" class="options__button">
            <i class="fas fa-user-plus"></i>
          </div>
          <div id="endMeeting" class="options__button background__red">
            <i class="fa fa-phone-slash"></i>
          </div>
        </div>        
      </div>

      <!------------------------------ room footer ends ------------------------------>
    </div>

    <!------------------------------ chat div ------------------------------>

    <div class="main__right">
      <div class="main__chat_window">
          <div class="messages">
          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" class="options__button">
          <i class="fa fa-location-arrow" aria-hidden="true"></i>
        </div>
      </div>
    </div>

    <!------------------------------ chat div ends ------------------------------>
  </div>

  <!------------------------------ center div ends ------------------------------>
  </body>

  <script src="https://momentjs.com/downloads/moment.min.js"></script>
  <script src="script.js"></script>
  <script src="room.js"></script>

</html>
